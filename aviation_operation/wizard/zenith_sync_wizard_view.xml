<?xml version="1.0"?>
<odoo>
    <record id="view_zenith_sync_wizard_form" model="ir.ui.view">
        <field name="name">zenith.sync.wizard.form</field>
        <field name="model">zenith.sync.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group col="4">
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="transaction_type_id"/>
                    </group>
                    <group col="4">
                        <field name="location_id"/>
                        <field name="classification_id"/>
                    </group>
                </group>
                <footer>
                    <button string="Sync" type="object" class="oe_highlight" name="button_sync"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
